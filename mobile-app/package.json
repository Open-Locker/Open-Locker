{
  "name": "mobile-app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "start:go": "expo start",
    "android:go": "expo start --android",
    "ios:go": "expo start --ios",
    "lint": "expo lint",
    "test": "jest --watch",
    "test:ci": "jest --ci --runInBand",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "doctor": "npx expo-doctor",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm run doctor",
    "generate:api": "rtk-query-codegen-openapi openapi-codegen.config.json && pnpm run typecheck",
    "quality:api": "pnpm run generate:api && pnpm run lint && pnpm run format:check"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-navigation/native": "^7.1.8",
    "@reduxjs/toolkit": "^2.11.2",
    "expo": "~54.0.33",
    "expo-constants": "~18.0.13",
    "expo-font": "~14.0.11",
    "expo-linking": "~8.0.11",
    "expo-router": "~6.0.23",
    "expo-secure-store": "^15.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-web-browser": "~15.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@rtk-query/codegen-openapi": "^2.2.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "eslint": "^9.39.2",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.17",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2"
  },
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "jest": {
    "preset": "jest-expo"
  }
}
